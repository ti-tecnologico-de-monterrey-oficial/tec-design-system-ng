{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ds-ng",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "src/assets/fonts",
      "output": "./assets/fonts"
    },
    {
      "glob": "**/*",
      "input": "src/assets/images",
      "output": "./assets/images"
    }
  ],
  "allowedNonPeerDependencies": [
    "luxon",
    "@angular/material",
    "libphonenumber-js",
    "ngx-mat-intl-tel-input",
    "@types/luxon",
    "@angular/cdk"
  ]
}
